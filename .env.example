# Telegram Bot
TG_BOT_TOKEN=your_telegram_bot_token_here

# Администратор бота (имеет полный доступ, одобряет других пользователей)
ADMIN_USERNAME=your_telegram_username
ADMIN_CHAT_ID=your_telegram_chat_id

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.proxyapi.ru/openai/v1

# MinIO Admin Credentials (для docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# MinIO Ports
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3 Storage (MinIO, Yandex, AWS)
S3_KEY_ID=botuser
S3_KEY_SECRET=botpassword123
S3_BUCKET=aichatbot

# S3 endpoint
# Local Docker: http://localhost:9000
# Remote: http://your-server-ip:9000
# Yandex Cloud: не указывать (используется по умолчанию)
MINIO_ENDPOINT=http://localhost:9000

